    <ContentPage.Content>
        <ListView x:Name="ListaDeNoticias" HasUnevenRows="false" RowHeight="400">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Spacing="0" Margin="0,8,0,6" BackgroundColor="White">
                            <Label  Text="{Binding Titulo}" 
                                    FontAttributes="Bold" 
                                    FontSize="20"
                                    Padding="5,0,0,0"/>
                            <Label Text="{Binding Descricao}" 
                                   x:Name="Lb_Descricao"
                                   FontAttributes="Italic"
                                   FontSize="15"
                                   Padding="5,0,0,0"
                                   LineBreakMode="TailTruncation"/>
                            <Button Text="Mais..." 
                                    BackgroundColor= "White"
                                    x:Name="Btn_Ver_Mais"
                                    BorderWidth="0" Clicked="Btn_Ver_Mais_Clicked" 
                                    HorizontalOptions="EndAndExpand"/>
                            <Image Aspect="AspectFill" 
                                   Source="{Binding UrlImage}" 
                                   HorizontalOptions="FillAndExpand" 
                                   HeightRequest="300" />
                            <Button  x:Name="Btn_Matricular_se" 
                                     Text="Mais..." 
                                     Margin="0,5,0,0"
                                     BackgroundColor="#3a5d82"
                                     TextColor="White" 
                                     StyleClass="Primary" 
                                     HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
    
    
