<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartInfo.Views.SecretariaView"
             BackgroundColor="White"
             Title="Secretaria">


    <!--Layout de para menu quatro opções agrupados-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame">
                <Setter Property="WidthRequest" Value="{OnPlatform Android=120, iOS=150}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=150, iOS=180}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HasShadow" Value="false" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FlexLayout.Basis" Value="50%" />
                <Setter Property="Margin" Value="15" />
                <Setter Property="BackgroundColor" Value="#eeeeee" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="40"
            >
                <Label 
                    Text="SmartInfo"
                    FontAttributes="Bold"
                    FontSize="Large"
                />

                <FlexLayout
                    Direction="Row"
                    AlignItems="Center"
                >
                    <!--<Image 
                        Source="help_center_route.png"
                    />

                    <Label 
                        Text="SÃO PAULO"
                        Margin="10,0,0,0"
                    />-->
                </FlexLayout>

                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    VerticalOptions="StartAndExpand"
                >
                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton 
                                x:Name="Btn_Pagamento"
                                Clicked="Btn_Pagamento_Clicked"
                                BackgroundColor="Transparent"
                                Source="Pagamento.png"
                            />

                            <Label 
                                Text="Propinas"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Notas"
                                Source="MenuDisciplinas.png"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Notas_Clicked"
                            />

                            <Label 
                                Text="Boletim Notas"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Faltas"
                                Source="Falta.png"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Faltas_Clicked"
                            />

                            <Label 
                                Text="Faltas"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Certificado"
                                Source="Certificado.png"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Certificado_Clicked"
                            />

                            <Label 
                                Text="Certifcado"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>
                </FlexLayout>

                <ActivityIndicator x:Name="IndicadorDeActividade" 
                           IsEnabled="True" 
                           IsVisible="True" 
                           Color="#3a5d82"
                           IsRunning="False" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           WidthRequest="50" HeightRequest="50"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    <!--Layout de para menu quatro opções agrupados-->



</ContentPage>