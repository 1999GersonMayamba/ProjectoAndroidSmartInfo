<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartInfo.Views.InformacaoDeLevantarCertificadoView"
             Title="Informações Certificado">


    <Grid>
        <ScrollView>
            <StackLayout>
         

            <Image Aspect="AspectFill" 
                    Source="ImageCabecalho.jpg" 
                    HorizontalOptions="FillAndExpand" 
                    HeightRequest="200" />


            <ListView   x:Name="ListaInformacoesCertificado"
                          RowHeight="55"
                          HasUnevenRows="True"
                          SeparatorColor="Gray">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Spacing="0" Margin="0,8,0,6" BackgroundColor="White">


                                    <StackLayout  Orientation="Horizontal">

                                        <Label Text="Valor: "
                                               FontSize="15"
                                               FontAttributes="Bold"
                                                Padding="5,0,0,0"/>

                                        <Label 
                                                 Text="{Binding Valor}"
                                                 LineBreakMode="TailTruncation"
                                                 FontSize="15"
                                                FontAttributes="Bold"
                                                Padding="5,0,0,0"
                                                TextColor="#4974a2"/>

                                    </StackLayout>


                                    <!--<StackLayout   Orientation="Horizontal">

                                        <Label Text="Banco: "
                                               FontSize="15"
                                               FontAttributes="Bold"
                                                Padding="5,0,0,0"/>

                                        <Label 
                                                 Text="{Binding Banco}"
                                                 LineBreakMode="TailTruncation"
                                                 FontSize="15"
                                                 FontAttributes="Bold"
                                                 Padding="5,0,0,0"
                                                 TextColor="#4974a2"/>

                                    </StackLayout>-->

                                    <StackLayout  Orientation="Horizontal">

                                        <Label Text="IBAN: "
                                               FontSize="15"
                                                FontAttributes="Bold"
                                                Padding="5,0,0,0"/>

                                        <Label 
                                                 Text="{Binding IBAN}"
                                                 LineBreakMode="TailTruncation"
                                                 FontSize="15"
                                                 FontAttributes="Bold"
                                                 Padding="5,0,0,0"
                                                 TextColor="#4974a2"/>

                                    </StackLayout>


                                    <StackLayout Orientation="Horizontal">

                                        <Label Text="Numero Da Conta: "
                                               FontSize="15"
                                               FontAttributes="Bold"
                                                Padding="5,0,0,0"/>

                                        <Label 
                                                 Text="{Binding Numero_Da_Conta}"
                                                 LineBreakMode="TailTruncation"
                                                 FontSize="15"
                                                 FontAttributes="Bold"
                                                 Padding="5,0,0,0"
                                                TextColor="#4974a2"/>

                                    </StackLayout>


                                    <StackLayout  Orientation="Vertical">

                                        <Label Text="Descrição: "
                                               FontSize="15"
                                               FontAttributes="Bold"
                                                Padding="5,0,0,0"/>

                                        <Label 
                                                 Text="{Binding Descricao}"
                                                 FontSize="15"
                                                FontAttributes="Bold"
                                                Padding="5,0,0,0"
                                                 TextColor="#4974a2"/>

                                    </StackLayout>

                                </StackLayout>

                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
        </ScrollView>
        <ActivityIndicator x:Name="IndicadorDeActividade"
                            IsEnabled="True"
                            IsVisible="True"
                            Color="#3a5d82"
                            IsRunning="False"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            WidthRequest="50" HeightRequest="50"/>
    </Grid>
</ContentPage>