<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartInfo.Views.InformacoesAcademicasView"
             Title="Informações Academicas"
             BackgroundColor="White">


    <!--Layout de para menu quatro opções agrupados-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame">
                <Setter Property="WidthRequest" Value="{OnPlatform Android=120, iOS=150}" />
                <Setter Property="HeightRequest" Value="{OnPlatform Android=150, iOS=180}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HasShadow" Value="false" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FlexLayout.Basis" Value="50%" />
                <Setter Property="Margin" Value="15" />
                <Setter Property="BackgroundColor" Value="#eeeeee" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="40"
            >
                <Label 
                    Text="SmartInfo"
                    FontAttributes="Bold"
                    FontSize="Large"
                />

                <FlexLayout
                    Direction="Row"
                    AlignItems="Center"
                >
                    <!--<Image 
                        Source="help_center_route.png"
                    />

                    <Label 
                        Text="SÃO PAULO"
                        Margin="10,0,0,0"
                    />-->
                </FlexLayout>

                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    VerticalOptions="StartAndExpand"
                >
                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton 
                                x:Name="Btn_Cursos"
                                Clicked="Btn_Cursos_Clicked"
                                BackgroundColor="Transparent"
                                Source="MenuCurso.png"
                            />

                            <Label 
                                Text="Cursos"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Classes"
                                Source="MenuClasses.png"
                                Clicked="Btn_Classes_Clicked"
                                BackgroundColor="Transparent"
                            />

                            <Label 
                                Text="Classes"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Disciplinas"
                                Source="MenuDisciplinas.png"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Disciplinas_Clicked"
                            />

                            <Label 
                                Text="Disicplinas"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                x:Name="Btn_Professores"
                                Source="MenuProfessor.png"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Professores_Clicked"
                            />

                            <Label 
                                Text="Professores"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                Source="DataDasProvas.png"
                                x:Name="Btn_Calendario_Provas"
                                BackgroundColor="Transparent"
                                Clicked="Btn_Calendario_Provas_Clicked"
                            />

                            <Label 
                                Text="Data De Provas"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>

                    <Frame>
                        <StackLayout
                            VerticalOptions="Center"
                            Spacing="0"
                        >
                            <ImageButton
                                Source="QuadroDeHonra.png"
                                BackgroundColor="Transparent"
                                Clicked="ImageButton_Clicked"
                            />

                            <Label 
                                Text="Quadro De Honra"
                                HorizontalTextAlignment="Center"
                            />
                        </StackLayout>
                    </Frame>
                </FlexLayout>

                <ActivityIndicator x:Name="IndicadorDeActividade" 
                           IsEnabled="True" 
                           IsVisible="True" 
                           Color="#3a5d82"
                           IsRunning="False" 
                           VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           WidthRequest="50" HeightRequest="50"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    <!--Layout de para menu quatro opções agrupados-->

</ContentPage>